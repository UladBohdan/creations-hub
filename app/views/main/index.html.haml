.container
  .row
    .col-md-9{:id => "main_creations"}
      = render "/creation/two_columns_creations"

    .col-md-3
      -#%h1{:style => "margin: 10px;"} MAIN PAGE
      .panel.panel-default
        .panel-heading
          %h3{:class => "panel-title"}Filters and sort settings
        .panel-body
          %div{"ng-controller" => "DropdownCtrl"}
            = render partial: "filter_dropdown",
                      locals: {filter: "category",
                                items: Category.translations,
                                separated_items: ["all"]}
            = render partial: "filter_dropdown",
                      locals: {filter: "sort",
                                title: "Show first",
                                items: ["most rated", "recently created", "recently updated"],
                                separated_items: ["any"]}
            = render partial: "filter_dropdown",
                      locals: {filter: "limit",
                                items: %w(4 6 10),
                                separated_items: ["no limit"]}
      %div{"ng-controller" => "TagCloudCtrl", "ng-init" => "strTags = '#{Creation.get_cloudy_tags}'; initTags();"}
        %jqcloud{:words => "words", :height => "300"}
