.container
  -#{"ng-controller" => "CreationsCtrl"}
  .row
    .col-md-9{:id => "main_creations"}
      = render "/creation/two_columns_creations"

    .col-md-3
      %h1{:style => "margin: 10px;"} MAIN PAGE

      .panel.panel-default
        .panel-heading
          %h3{:class => "panel-title"}Filters and sort settings
        .panel-body
          %h4 Category:
          .btn-group{:role => "group"}
            - Category.each_translation do |category|
              %button{:type => "button", :class => "btn btn-default",
                "ng-click" => "loadCreations({category: '#{category}'})"}#{category}
          %h4 Sort:
          .btn-group{:role => "group"}
            %button{:type => "button", :class => "btn btn-default",
                    "ng-click" => "loadCreations({sort_by: 'recent'})"}most recent
            %button{:type => "button", :class => "btn btn-default",
                    "ng-click" => "loadCreations({sort_by: 'rating'})"}most rated

          %h4 TEST:
          = link_to creation_index_path, remote: true do
            %button{:type => "button", :class => "btn btn-default"} new set of creations

      .panel.panel-default
        .panel-heading
          %h3{:class => "panel-title"}Tag cloud
        .panel-body
          TAGS TAGS TAGS