-# javascript_include_tag "main/index.js"

.container{"ng-controller" => "CreationsCtrl"}
  .row
    .col-md-8
      %div{"ng-repeat" => "creation in creations"}
        .panel.panel-default
          .panel-heading
            %h3{:class => "panel-title"}
              {{creation.title}}
          .panel-body
            sample text

    .col-md-4
      %h1{:style => "margin: 10px;"} MAIN PAGE

      .panel.panel-default
        .panel-heading
          %h3{:class => "panel-title"}Filters and sort settings
        .panel-body
          %h4 Category:
          .btn-group{:role => "group"}
            - Category.each_translation do |category|
              %button{:type => "button", :class => "btn btn-default"}#{category}
          %h4 Sort:
          .btn-group{:role => "group"}
            %button{:type => "button", :class => "btn btn-default"}most recent
            %button{:type => "button", :class => "btn btn-default"}most rated

      .panel.panel-default
        .panel-heading
          %h3{:class => "panel-title"}Tag cloud
        .panel-body
          TAGS TAGS TAGS