.container
  .row
    .col-md-8
      - @creations.each do |creation|
        .panel.panel-default
          .panel-heading
            %h3{:class => "panel-title"}
              by
              %b= User.where(id: creation.user_id).first.name
          .panel-body
            Title:
            %b= creation.title

    .col-md-4
      %h1{:style => "margin: 10px;"} MAIN PAGE

      .panel.panel-default
        .panel-heading
          %h3{:class => "panel-title"}Filters and sort settings
        .panel-body
          .btn-group{:role => "group"}
            - Category.each_translation do |category|
              %button{:type => "button", :class => "btn btn-default"}#{category}

      .panel.panel-default
        .panel-heading
          %h3{:class => "panel-title"}Most rated
        .panel-body
          - @most_rated.each do |creation|
            %p
              = creation.title
              - creation.rating.times do
                %i{:class => "fa fa-star", :style => "color: gold"}

      .panel.panel-default
        .panel-heading
          %h3{:class => "panel-title"}Most recent
        .panel-body
          - @most_recent.each do |creation|
            %p #{creation.title} (#{creation.created_at})


      .panel.panel-default
        .panel-heading
          %h3{:class => "panel-title"}Tag cloud
        .panel-body