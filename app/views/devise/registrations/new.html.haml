.container{"ng-controller" => "ImageUploaderCtrl"}
  .row
    .col-md-4.col-sm-4
    .col-md-4.col-sm-4
      .panel.panel-default
        .panel-body
          %h2 Sign up
          %br
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            %br
            = f.text_field :name, autofocus: true, placeholder: "Your name", class: "form-control"
            %br/
            %input{:type => "file", :class => "form-control", "image-upload-dr" => "uploadFile"}
            %span{:style => "color: gold;", "ng-if" => "status == 0"}
              %i{:class => "fa fa-exclamation-triangle"}
            %span{:style => "color: green;", "ng-if" => "status == 1"}
              %i{:class => "fa fa-check-circle"}
            {{message_new}}
            = f.text_field :image, "ng-model": "cloud", "hidden": true
            %br/
            %br
            = f.email_field :email, placeholder: "Email", class: "form-control"
            %br
            - min_password_text = ""
            - min_password_text = " (#{@minimum_password_length} characters minimum)" if @minimum_password_length
            = f.password_field :password, autocomplete: "off", placeholder: "Password#{min_password_text}", class: "form-control"
            %br
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation", class: "form-control"
            %br
            .actions
              = f.submit "Sign up", class: "btn btn-default"
          %br
          = render "devise/shared/links"