.container{"ng-controller" => "ImageUploaderCtrl"}
  .row
    .col-md-4.col-sm-4
    .col-md-4.col-sm-4
      .panel.panel-default
        .panel-body
          %h2 Edit #{resource_name.to_s.humanize}
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            = devise_error_messages!
            %br
            = f.text_field :name, autofocus: true, placeholder: "Your name", class: "form-control"
            %br/
            %input{:type => "file", :placeholder => "Upload an image", :class => "form-control", "image-upload-dr" => "uploadFile"}
            %span{:style => "color: gold;", "ng-if" => "status == 0"}
              %i{:class => "fa fa-exclamation-triangle"}
            %span{:style => "color: green;", "ng-if" => "status == 1"}
              %i{:class => "fa fa-check-circle"}
            {{message}}
            = f.text_field :image, "ng-model": "cloud", "hidden": true
            %br/
            %br/
            = f.email_field :email, placeholder: "Email", class: "form-control"
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %div
                Currently waiting confirmation for: #{resource.unconfirmed_email}
            %br/
            = f.password_field :password, autocomplete: "off", placeholder: "Password (leave blank if you don't want to change it)", class: "form-control"
            %br
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation", class: "form-control"
            %br
            = f.password_field :current_password, autocomplete: "off", placeholder: "Current password to confirm your changes", class: "form-control"
            %br
            .actions
              = f.submit "Update", class: "btn btn-default"
          %h3 Cancel my account
          %p
            Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default"}
          = link_to "Back", :back